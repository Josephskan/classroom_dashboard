<h1>What message would you like to make?</h1>

<%= form_for [@classroom, @message] do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>
