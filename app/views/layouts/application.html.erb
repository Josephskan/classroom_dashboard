<!DOCTYPE html>
<html>
<head>
  <title>ClassroomDashboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= yield %>

  <div class="custom-list">
    <% if @current_user %>
      <hr>
      <footer>
        <small>
          you are logged in as <%= @current_user.username %>, <%= link_to "Log out", session_path("current"), method: :delete %>
        </small>
      </footer>
    <% end %>
  </div>
</body>
</html>
